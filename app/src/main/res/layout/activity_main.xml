<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="24dp"
            android:textSize="32sp"
            android:id="@+id/singIn"
            android:onClick="signIn"
            android:textStyle="bold"
            android:textColor="@color/signColor"
            android:text="Sign In"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:textStyle="bold"
            android:textSize="32sp"
            android:id="@+id/singUp"
            android:onClick="signUp"
            android:layout_below="@+id/singIn"
            android:text="Sign Up"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/singView"
            android:paddingBottom="12dp"
            android:layout_below="@id/singUp"
            android:layout_marginTop="28dp"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_height="wrap_content">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:paddingLeft="18dp"
                android:textColor="@android:color/darker_gray"
                android:textCursorDrawable="@drawable/blue_cursor"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:id="@+id/edt_username"
                android:background="@drawable/input_rounded"
        />
        <EditText
                android:textColor="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@drawable/gradient_button"
                android:layout_margin="16dp"
                android:paddingLeft="18dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:id="@+id/edt_password"
                android:background="@drawable/input_rounded"
        />
        <TextView
                android:layout_width="wrap_content"
                android:text="Forgot Password?"
                android:layout_gravity="right"
                android:textStyle="bold"
                android:textColor="@color/signColor"
                android:layout_marginRight="16dp"
                android:layout_height="wrap_content"/>
        <Button
                android:layout_width="250dp"
                android:layout_marginTop="28dp"
                android:layout_gravity="center"
                android:background="@drawable/gradient_button"
                android:textAllCaps="false"
                android:text="Sing In"
                android:id="@+id/btnSigIn"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                app:elevation="10dp"
                app:backgroundTint="@color/signColor"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Privacy Police"
                android:layout_marginTop="48dp"
                android:textColor="@color/signColor"
                android:textStyle="bold"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/singUpView"
            android:paddingBottom="12dp"
            android:layout_below="@id/singUp"
            android:layout_marginTop="28dp"
            android:orientation="vertical"
            android:visibility="invisible"
            android:layout_height="wrap_content">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:paddingLeft="18dp"
                android:textColor="@android:color/darker_gray"
                android:textCursorDrawable="@drawable/blue_cursor"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:hint="Email"
                android:id="@+id/edt_username_signup"
                android:background="@drawable/input_rounded"
        />
        <EditText
                android:textColor="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@drawable/gradient_button"
                android:layout_margin="16dp"
                android:paddingLeft="18dp"
                android:paddingTop="8dp"
                android:inputType="textPassword"
                android:paddingBottom="8dp"
                android:hint="Password"
                android:id="@+id/edt_password_signup"
                android:background="@drawable/input_rounded"
        />
        <EditText
                android:textColor="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@drawable/gradient_button"
                android:layout_margin="16dp"
                android:paddingLeft="18dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:hint="Confirm Password"
                android:id="@+id/edt_confirm_password_signup"
                android:background="@drawable/input_rounded"
        />
        <Button
                android:layout_width="250dp"
                android:layout_marginTop="28dp"
                android:layout_gravity="center"
                android:background="@drawable/gradient_button"
                android:textAllCaps="false"
                android:text="Sign Up"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                app:elevation="10dp"
                android:elevation="10dp"
                app:backgroundTint="@color/signColor"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Privacy Policy"
                android:layout_marginTop="48dp"
                android:textColor="@color/signColor"
                android:textStyle="bold"
        />
    </LinearLayout>

</RelativeLayout>