<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@android:color/white"
             tools:context=".Fragment.Payment.PaymentThirdFragment">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">
            <ImageView android:layout_width="80dp"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="32dp"
                       android:id="@+id/succsess"
                       android:src="@drawable/ic_check_circle_24px"
                       android:layout_height="80dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="Payment Successful"
                      android:layout_below="@id/succsess"
                      android:id="@+id/message"
                      android:layout_centerHorizontal="true"
                      android:textSize="20sp"
                      android:layout_marginTop="16dp"
                      android:textStyle="bold"
                      android:textColor="@android:color/black"
                      android:layout_height="wrap_content"/>
        <TextView android:layout_width="200dp"
                  android:text="Thank for your payment. We will be in contact with more details shortly."
                  android:layout_below="@id/message"
                  android:layout_centerHorizontal="true"
                  android:textSize="12sp"
                  android:gravity="center"
                  android:layout_marginTop="8dp"
                  android:textColor="@android:color/black"
                  android:layout_height="wrap_content"/>

        <Button android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:id="@+id/btnMakePayment"
                android:layout_alignParentBottom="true"
                android:layout_margin="18dp"
                android:text="BACK TO HOME"
                android:background="@drawable/button_chooser"
        />
    </RelativeLayout>

</FrameLayout>