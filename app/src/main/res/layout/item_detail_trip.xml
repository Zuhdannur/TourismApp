<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="120dp"
                android:background="@drawable/my_shadow"
                android:layout_marginLeft="5dp"
                android:layout_height="160dp">
    <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     android:layout_width="match_parent"
                                                     app:riv_corner_radius_top_left="10dp"
                                                     app:riv_corner_radius_top_right="10dp"
                                                     android:adjustViewBounds="true"
                                                     android:src="@drawable/transluxury"
                                                     android:scaleType="centerCrop"
                                                     android:id="@+id/guide_pic"
                                                     android:layout_height="80dp"/>
    <TextView android:layout_width="wrap_content"
              android:text="Transluxury"
              android:layout_below="@+id/guide_pic"
              android:layout_marginTop="2dp"
              android:id="@+id/name_guide"
              android:textColor="@android:color/black"
              android:layout_marginLeft="8dp"
              android:layout_height="wrap_content"/>
    <ImageView android:layout_width="wrap_content"
               app:srcCompat="@drawable/ic_group_4"
               android:layout_below="@+id/name_guide"
               android:layout_marginTop="2dp"
               android:layout_marginLeft="8dp"
               android:id="@+id/rate"
               android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/price"
              android:layout_marginLeft="8dp"
              android:textSize="8sp"
              android:text="Rp 20.000.000 / Night"
              android:layout_below="@+id/rate"
              android:layout_height="wrap_content"/>

</RelativeLayout>