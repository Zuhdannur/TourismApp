<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".Fragment.DetailProfile.ListTripFragment">

    <RelativeLayout android:layout_width="match_parent"
                    android:padding="16dp"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Last Trip"
                  android:textSize="20sp"
                  android:textColor="@android:color/black"
                  android:id="@+id/last"
                  android:layout_height="wrap_content"/>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_below="@id/last"
                        android:layout_height="wrap_content">
        <View android:layout_width="match_parent"
              android:background="@drawable/my_shadow"
              android:layout_height="100dp"
              android:layout_alignParentStart="true"
              android:layout_alignParentTop="true"/>
        <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginTop="8dp"
                app:riv_corner_radius_top_left="10dp"
                android:layout_marginLeft="2dp"
                app:riv_corner_radius_bottom_left="10dp"
                android:scaleType="centerCrop"
                android:id="@+id/image"
                android:src="@drawable/dago"

        />
        <TextView android:layout_width="wrap_content"
                  android:text="Dago Pojok"
                  android:layout_marginTop="20dp"
                  android:textSize="18sp"
                  android:id="@+id/title"
                  android:layout_toRightOf="@id/image"
                  android:layout_marginLeft="8dp"
                  android:textColor="@android:color/black"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Rp 50.251"
                  android:layout_below="@id/title"
                  android:layout_toRightOf="@id/image"
                  android:layout_marginLeft="8dp"
        />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>