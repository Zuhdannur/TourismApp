<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_height="400dp">
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/my_shadow"
                    android:layout_height="365dp">
        <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                app:riv_corner_radius="10dp"
                android:layout_height="match_parent"
                android:id="@+id/imagePariwisata"
                android:scaleType="centerCrop"
                android:outlineProvider="background"
                android:background="@drawable/corner_radius"
                android:adjustViewBounds="true"
                android:src="@drawable/example_image"
        />
        <View android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/black_gradient"
        />
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">
            <TextView android:layout_width="wrap_content"
                      android:text="Full Moon Island"
                      android:textStyle="bold"
                      android:id="@+id/vication_name"
                      android:layout_marginLeft="16dp"
                      android:textColor="@android:color/white"
                      android:textSize="20sp"
                      android:layout_alignParentBottom="true"
                      android:layout_marginBottom="98dp"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       app:srcCompat="@drawable/ic_group_4"
                       android:layout_alignParentBottom="true"
                       android:layout_marginBottom="85dp"
                       android:layout_marginLeft="16dp"
                       android:layout_height="wrap_content"/>
            <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:elevation="10dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_tag"
                    app:cardBackgroundColor="@color/color_tag"
                    android:layout_marginBottom="56dp"
                    android:layout_marginLeft="16dp"
                    android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:layout_marginTop="4dp"
                          android:layout_marginLeft="4dp"
                          android:layout_marginRight="4dp"
                          android:layout_marginBottom="4dp"
                          android:layout_height="wrap_content"
                          android:textSize="12sp"
                          android:text="Wisata Alam"
                />

            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="300dp"
            app:backgroundTint="@color/fab_yellow"
            app:fabCustomSize="60dp"
            android:id="@+id/btnDetail"
            tyle="@style/Widget.MaterialComponents.FloatingActionButton"
            android:src="@drawable/ic_vector_1"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="28dp"
            android:background="@color/fab_yellow"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            tools:ignore="InvalidId"/>

</RelativeLayout>