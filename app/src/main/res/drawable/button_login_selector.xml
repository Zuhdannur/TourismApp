<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:top="20dp" android:right="5dp" android:left="5dp">
                <shape>
                    <solid android:color="#D6D6D6"></solid>
                    <corners android:radius="17dp"></corners>
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape>
                    <gradient
                            android:angle="270"
                            android:startColor="@color/signColor"
                            android:endColor="@color/endColor"
                    >
                    </gradient>
                    <stroke android:width="1dp" android:color="@color/signColor"></stroke>
                    <corners android:radius="18dp"></corners>
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"></padding>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>